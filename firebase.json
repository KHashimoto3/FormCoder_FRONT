{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": [
    {
      "database": "form-hint-db",
      "rules": "firestore.form-hint-db.rules",
      "indexes": "firestore.form-hint-db.indexes.json"
    }
  ]
}
